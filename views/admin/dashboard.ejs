<div class="admin-title d-flex w-100 justify-content-between">
  <h2 class="p-2">Posts</h2>

  <a href="/add-post" class="button p-3">+Add Post</a>
</div>

<ul class="admin-post">
  <% data.forEach(post => { %>

  <li class="container mt-2">
    <div class="row">
      <div class="col-10">
        <a href="/post/<%= post._id %>" class="button">
          <%= post.title %>&nearr;
        </a>
      </div>

      <div class="admin-post-controls col">
        <a href="/edit-post/<%= post._id %>" class="button btn btn-outline-dark"
          >Edit</a
        >
      </div>
      <div class="col">
        <form
          action="/delete-post/<%= post._id %>?_method=DELETE"
          method="POST"
        >
          <input type="submit" value="Delete" class="btn btn-outline-dark" />
        </form>
      </div>
    </div>
  </li>

  <% }) %>
</ul>
